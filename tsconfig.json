{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "importHelpers": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "types": ["node"],
    "lib": ["es2021"],
    "target": "es2021",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*"
  ]
}